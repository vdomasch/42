########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################

SRCS		:=	so_long.c

SRCS_D		:=	srcs/

OBJS_D		:=	objs/

OBJS		:=	$(SRCS:%.c=$(OBJS_D)%.o)

HEAD		:=	so_long.h

#HEAD_D		:=

CC			:=	cc

CFLAGS		:=	-Wall -Wextra -Werror -g3 

NAME		:=	so_long

########################################################################################################################
#                                                         LIB                                                          #
########################################################################################################################

LIB			:=	Libmlx_Linux.a

LIB_D		:=	minilibx-linux/

#LIB_I		:=	$(LIB_D)

#LIB_H		:=	$(LIB_I)libft.h

#LIB_A		:=	$(addprefix $(LIB_D), $(LIB))

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################

all			:	$(NAME)

$(NAME)		:	$(OBJS_D) $(OBJS)
				$(MAKE) -C $(LIB_D)
				$(CC) $(CFLAGS) $(OBJS) $(LIB_D)\Libmlx_Linux.a -Lmlx_linux -lmlx_Linux -L/usr/lib -Imlx_linux -lXext -lX11 -lm -lz -o $(NAME)

$(OBJS)		:	$(OBJS_D)%.o: $(SRCS_D)%.c $(HEAD)
				$(CC) $(CFLAGS) -I/usr/include -Imlx_linux -O3 -c $< -o $@


$(OBJS_D)	:
				@mkdir -p $(OBJS_D)

########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################

clean		:
				rm -rf $(OBJS) $(OBJS_D)
				cd $(LIB_D) && $(MAKE) clean

fclean		:	clean
				rm -rf $(NAME)
				cd $(LIB_D) && $(MAKE) fclean

re			:	fclean all

.PHONY: all clean fclean re lib

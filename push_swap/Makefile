########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################

SRCS		:=	push_swap.c							\
				checks.c							\
				rules.c								\
				utils.c							\
				sorting_algorythm.c					\
				swaplist.c							\

SRCS_D		:=	srcs/

OBJS_D		:=	objs/

OBJS		:=	$(SRCS:%.c=$(OBJS_D)%.o)

DEPS_D		:=	deps/

DEPS		:=	$(SRCS:%.c=$(DEPS_D)%.d)

HEAD		:=	push_swap.h

CC			:=	cc

CFLAGS		:=	-Wall -Wextra -Werror -g3

DEPFLAGS	:=	-MMD -MP

NAME		:=	push_swap

########################################################################################################################
#                                                         LIB                                                          #
########################################################################################################################

LIB			:=	libft.a

LIB_D		:=	Libft/

LIB_H	:=	$(LIB_D)libft.h

LIB_A		:=	$(addprefix $(LIB_D), $(LIB))

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################

all			:	$(NAME)
				
$(NAME)		:	$(OBJS_D) $(OBJS) $(LIB_H)
				$(MAKE) -s -C $(LIB_D)
				$(CC) $(CFLAGS) $(DEPFLAGS) $(OBJS) $(LIB_A) -o $(NAME)

#$(DEPS)		:	

$(OBJS)		:	$(OBJS_D)%.o: $(SRCS_D)%.c $(HEAD) $(LIB_H)
				$(CC) $(CFLAGS) -I/usr/include -I$(LIB_D) -c $< -o $@

$(OBJS_D)	:
				@mkdir -p $(OBJS_D)

#$(DEPS_D)	:
#				@mkdir -p $(DEPS_D)

########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################


clean		:	
				rm -rf $(OBJS) $(OBJS_D)
				@cd $(LIB_D) && $(MAKE) -s clean

fclean		:	clean
				rm -rf $(NAME)
				@cd $(LIB_D) && $(MAKE) -s fclean

re			:	fclean all

.PHONY: all clean fclean re

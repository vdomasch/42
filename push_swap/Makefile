########################################################################################################################
#                                                       VARIABLE                                                       #
########################################################################################################################

SRCS		:=	push_swap.c							\
				push_swap_rules.c					\
				rank_list.c							\
				sorting_algorythm.c					\
				swaplist.c							\

SRCS_D		:=	srcs/

OBJS_D		:=	objs/

OBJS		:=	$(SRCS:%.c=$(OBJS_D)%.o)

HEAD		:=	push_swap.h

#HEAD_D		:=

CC			:=	cc

CFLAGS		:=	-Wall -Wextra -Werror -g3 

NAME		:=	push_swap

########################################################################################################################
#                                                         LIB                                                          #
########################################################################################################################

LIB		:=	libft.a

LIB_D		:=	../Libft/

#LIB_I		:=	$(LIB_D)

#LIB_H		:=	$(LIB_I)libft.h

#LIB_A		:=	$(addprefix $(LIB_D), $(LIB))

########################################################################################################################
#                                                        RULES                                                         #
########################################################################################################################

all			:	$(NAME)

$(NAME)		:	$(OBJS_D) $(OBJS)
				$(MAKE) -C $(LIB_D)
				$(CC) $(CFLAGS) $(OBJS) $(LIB_D)/libft.a -o $(NAME)

$(OBJS)		:	$(OBJS_D)%.o: $(SRCS_D)%.c $(HEAD)
				$(CC) $(CFLAGS) -c $< -o $@

$(OBJS_D)	:
				@mkdir -p $(OBJS_D)

########################################################################################################################
#                                                        COMMANDS                                                      #
########################################################################################################################

clean		:
				rm -rf $(OBJS) $(OBJS_D)
				cd $(LIB_D) && $(MAKE) clean

fclean		:	clean
				rm -rf $(NAME)
				cd $(LIB_D) && $(MAKE) fclean

re			:	fclean all

.PHONY: all clean fclean re lib
